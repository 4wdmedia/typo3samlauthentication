{
  "name": "daniel-pfeil/samlauthentication",
  "type": "typo3-cms-extension",
  "description": "This extension adds a authentication method for SAML with different service provider.",
  "keywords": [
    "TYPO3",
    "SAML",
    "SSO",
    "authentication",
    "serviceprovider"
  ],
  "license": "GPL-3.0-only",
  "version": "5.0.0",
  "require": {
    "typo3/minimal": ">=10",
    "simplesamlphp/simplesamlphp": "^1.19",
    "ext-pdo": "*"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.0",
    "squizlabs/php_codesniffer": "*",
    "phpspec/phpspec": "*",
    "leanphp/phpspec-code-coverage": "*"
  },
  "extra": {
    "typo3/cms": {
      "extension-key": "samlauthentication"
    }
  },
  "autoload": {
    "psr-4": {
      "DanielPfeil\\Samlauthentication\\": "Classes/"
    }
  }
}
